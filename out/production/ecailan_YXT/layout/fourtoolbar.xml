<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:id="@+id/fourtoolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/fourtoolbar_bottom">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >

            <ImageView
                android:id="@+id/fourtoolbar_tabonebg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/footer_active_bg"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/fourtoolbar_tabone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#00000000"
                android:padding="0dp"
                android:src="@drawable/fourtoolbar_icon_1a" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >

            <ImageView
                android:id="@+id/fourtoolbar_tabtwobg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/footer_active_bg"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/fourtoolbar_tabtwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#00000000"
                android:padding="0dp"
                android:src="@drawable/fourtoolbar_icon_2u" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >

            <ImageView
                android:id="@+id/fm_4toolbar_tabthreebg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/footer_active_bg"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/fourtoolbar_tabthree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#00000000"
                android:padding="0dp"
                android:src="@drawable/fourtoolbar_icon_3u" />

            <TextView
                android:id="@+id/fourtoolbar_attend_notify_num"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="23dp"
                android:background="@drawable/refresh_num_red_bg"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >

            <ImageView
                android:id="@+id/fourtoolbar_tabfourbg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/footer_active_bg"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/fourtoolbar_tabfour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#00000000"
                android:padding="0dp"
                android:src="@drawable/fourtoolbar_icon_4u"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>